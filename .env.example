# PR-CYBR-P0D Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to the repository!

# ============================================================================
# Notion Integration (Required)
# ============================================================================
# Notion API integration token (create at https://www.notion.so/my-integrations)
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ID of your main Episodes database in Notion
NOTION_EPISODES_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Per-season database IDs (if using separate databases per season)
# PR_CYBR_P0D_S1_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# PR_CYBR_P0D_S2_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# (... add more as needed for seasons 3-17)

# ============================================================================
# Internet Archive (Required for Publishing)
# ============================================================================
# Archive.org S3-compatible API credentials
# Get from: https://archive.org/account/s3.php
ARCHIVE_ACCESS_KEY=your_archive_access_key
ARCHIVE_SECRET_KEY=your_archive_secret_key

# Prefix for all podcast episode identifiers on Archive.org
# Format: {prefix}-s{season}-e{episode} (e.g., pr-cybr-pod-s01-e001)
ARCHIVE_IDENTIFIER_PREFIX=pr-cybr-pod

# Optional: Archive.org collection to add episodes to
ARCHIVE_COLLECTION=opensource_audio

# ============================================================================
# RSS Feed Configuration (Required)
# ============================================================================
# Your podcast feed title
FEED_TITLE=PR-CYBR Podcast

# Podcast author/creator name
FEED_AUTHOR=PR-CYBR Team

# Base URL where your RSS feed and GitHub Pages site are hosted
FEED_BASE_URL=https://pr-cybr.github.io/PR-CYBR-P0D

# URL to your podcast cover art (1400x1400 to 3000x3000 px recommended)
FEED_IMAGE_URL=https://pr-cybr.github.io/PR-CYBR-P0D/assets/podcast-logo.png

# Podcast description
FEED_DESCRIPTION=The official PR-CYBR podcast covering cybersecurity, technology, and digital innovation.

# Podcast language (ISO 639-1 code)
FEED_LANGUAGE=en

# Podcast category (see: https://help.apple.com/itc/podcasts_connect/#/itc9267a2f12)
FEED_CATEGORY=Technology

# Optional: Podcast email for RSS feed
FEED_EMAIL=podcast@pr-cybr.com

# ============================================================================
# OpenAI API (Optional - for AI-enhanced features)
# ============================================================================
# OpenAI API key for Whisper transcription and GPT show notes generation
# Leave empty to use template-based show notes without AI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Whisper model to use (whisper-1 for API, or local: tiny, base, small, medium, large)
WHISPER_MODEL=whisper-1

# GPT model for show notes generation
GPT_MODEL=gpt-4-turbo-preview

# ============================================================================
# Google Workspace Integration (Optional - for NotebookLM & Drive)
# ============================================================================
# Service account JSON credentials (as a single-line JSON string)
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_DRIVE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Google Drive folder ID for episode assets
PR_CYBR_P0D_DRIVE_FOLDER_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# NotebookLM API key (if available)
NOTEBOOK_LM_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# n8n Webhook Integration (Optional)
# ============================================================================
# Webhook URLs for triggering workflows FROM n8n TO GitHub
# These are GitHub repository dispatch endpoints (no change needed unless self-hosted)
GITHUB_DISPATCH_URL=https://api.github.com/repos/PR-CYBR/PR-CYBR-P0D/dispatches

# Webhook URLs for n8n workflows (GitHub will POST to these)
# Set these to your n8n webhook endpoints
N8N_PRE_URL=https://your-n8n-instance.com/webhook/pre-campaign
N8N_LIVE_URL=https://your-n8n-instance.com/webhook/go-live
N8N_POST_URL=https://your-n8n-instance.com/webhook/post-campaign

# GitHub personal access token for n8n to trigger workflows (needs repo scope)
# Only needed if n8n is triggering GitHub Actions
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Social Media Integration (Optional)
# ============================================================================
# Twitter/X API credentials
SOCIAL_TWITTER_API_KEY=xxxxxxxxxxxxxxxxxxxxx
SOCIAL_TWITTER_API_SECRET=xxxxxxxxxxxxxxxxxxxxx
SOCIAL_TWITTER_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxx
SOCIAL_TWITTER_ACCESS_SECRET=xxxxxxxxxxxxxxxxxxxxx

# LinkedIn API credentials
SOCIAL_LINKEDIN_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx
SOCIAL_LINKEDIN_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxx
SOCIAL_LINKEDIN_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxx

# Mastodon instance and token
SOCIAL_MASTODON_INSTANCE=https://mastodon.social
SOCIAL_MASTODON_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Storage Adapter Configuration (Advanced)
# ============================================================================
# Which storage backend to use for episode hosting
# Options: archive (Internet Archive), spotify (Spotify for Podcasters), custom
STORAGE_ADAPTER=archive

# Custom storage endpoint (only if STORAGE_ADAPTER=custom)
CUSTOM_STORAGE_ENDPOINT=https://your-custom-storage.com/api
CUSTOM_STORAGE_TOKEN=xxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Development & Testing
# ============================================================================
# Set to 'true' to enable debug logging
DEBUG=false

# Set to 'true' for dry-run mode (no actual changes)
DRY_RUN=false

# Local development mode (skip some validations)
DEV_MODE=false
